<Window x:Class="WhereMyTreasure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhereMyTreasure"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="250">
    <Grid Height="80" VerticalAlignment="Top">
        <Button x:Name="button" Content="Button" Click="button_Click" Margin="10,10,130,50" Grid.Column="0" Grid.Row="0"/>
        <TextBox x:Name ="_multi" Height="20" Margin="0,0,0,0"  Grid.Column="1" Grid.Row="0" />
        <TextBox x:Name ="_threshold" Height="20" Margin="0,55,0,0" Grid.Row="0" VerticalAlignment="Top" d:LayoutOverrides="Height" />

    </Grid>
</Window>
